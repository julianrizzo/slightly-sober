@model IEnumerable<slightly_sober.Models.User>

@{
    ViewData["Title"] = "Users";
}

<h1>Admin Console</h1>
<h3>All Users</h3>

<table class="table">
    <thead>
        <tr>
            <th>
                Username
            </th>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Email
            </th>
            <th>
                Is Admin
            </th>
            <th>
                Is Active
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsAdmin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Login.IsActive)
                </td>
                <td>
                    @if (item.Login.IsActive == true)
                    {
                        <a asp-action="DisableUser" asp-route-id="@item.UserID" asp-route-status="false">Disable</a>
                    }
                    else
                    {
                        <a asp-action="DisableUser" asp-route-id="@item.UserID" asp-route-status="true">Enable</a>
                    }
                </td>
                <td>
                    <a asp-action="DeleteUser" asp-route-id="@item.UserID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@Html.ValidationMessage("AdminError", new { @class = "text-danger" })